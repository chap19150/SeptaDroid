<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/advisory_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#16708D"
        android:ellipsize="end"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:fontFamily="sans-serif" >
    </TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#575757" />

    <ScrollView
        android:id="@+id/advisory_dialog_scrollview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="10dp" >

        <TextView
            android:id="@+id/advisory_dialog_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp" >
        </TextView>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#575757" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/advisory_dialog_negative_button"
            android:background="@drawable/btn_default_holo_light"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/advisory_dialog_positive_button"
            android:background="@drawable/btn_default_holo_light"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>